    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        const THANE_COORDS = [19.2183, 72.9781];
        const DEFAULT_ZOOM = 13;
        const assignedMap = L.map('assigned-map').setView(THANE_COORDS, DEFAULT_ZOOM);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(assignedMap);
        const assignedComplaints = [
            { id: 'V001', lat: 19.2200, lon: 72.9800, type: 'Pothole', status: 'In Progress' },
            { id: 'V002', lat: 19.2150, lon: 72.9750, type: 'Street Light Out', status: 'Pending' }
        ];
        assignedComplaints.forEach(complaint => {
            L.marker([complaint.lat, complaint.lon])
                .addTo(assignedMap)
                .bindPopup(`<b>${complaint.type}</b><br>ID: ${complaint.id}<br>Status: ${complaint.status}`);
        });
    </script>
